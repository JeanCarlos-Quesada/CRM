﻿@model DO.Objects.category
@{ ViewBag.Title = "Register";
}

<div class="container-main shadow">
    <div class="ml-4 mr-4">
        <h3 class="titleView">Register Category</h3>
        <div>
            <div class="form-group">
                <label for="categoryName">Full Name</label>
                @Html.TextBoxFor(m => m.categoryName, new { @class = "form-control", @id= "categoryName" })
            </div>
            <input type="submit" value="Create" class="btn btn-primary" onclick="registerCategory()"/>
            @Html.ActionLink("Cancel", "Index", "Home", new { @class = "btn btn-primary aButton" })
        </div>
    </div>
</div>
@Scripts.Render("~/Scripts/categories.js")
