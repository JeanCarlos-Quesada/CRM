﻿@model IEnumerable<DO.Objects.category>
@{ ViewBag.Title = "Update"; }

<div class="container-main shadow">
    <div class="ml-4 mr-4">
        <h3 class="titleView">Register Category</h3>
        @using (Html.BeginForm())
        {
            <div>
                <div class="form-group">
                    <label for="clientName">Categories</label>
                    @Html.DropDownList("categoryId", Model.Select(x => new SelectListItem
                       {
                           Value = x.id.ToString(),
                           Text = x.categoryName,
                       }), new { @onchange = "getOneById()", @class = "custom-select" })
                </div>
                <div class="form-group">
                    <label for="clientName">Full Name</label>
                    <input type="text" name="categoryName" id="categoryName" class="form-control" />
                </div>
                <input type="submit" value="Create" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "Index", "Home", new { @class = "btn btn-primary aButton" })
            </div>
        }
    </div>
</div>

@Scripts.Render("~/Scripts/categories.js")
<script>
    $(document).ready(function () {
        $('.custom-select').select2();
    });
</script>

