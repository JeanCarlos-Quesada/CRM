<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRM</title>
    @*CSS*@
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Style.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-free-5.13.0-web/css/all.css" rel="stylesheet" />
    <link href="~/Content/select2.min.css" rel="stylesheet" />

    @*Scripts*@
    @Scripts.Render("~/Scripts/jquery-3.4.1.js")
    @Scripts.Render("~/Content/bootstrap/js/bootstrap.js")
    @Scripts.Render("~/Scripts/select2.js")
    @RenderSection("scripts", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        @Html.ActionLink("CRM", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item dropdown">
                    <a class="nav-link">Orders</a>
                    <div class="dropdown-menu dropdown-menu-right   " aria-labelledby="navbarDropdown">
                        @Html.ActionLink("List of Orders", "Index", "Clients", new { area = "" }, new { @class = "dropdown-item" })
                        <div class="dropdown-divider"></div>
                        @Html.ActionLink("Register Order", "Register", "Clients", new { area = "" }, new { @class = "dropdown-item" })
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link">Clients</a>
                    <div class="dropdown-menu dropdown-menu-right   " aria-labelledby="navbarDropdown">
                        @Html.ActionLink("List of Clients", "Index", "Clients", new { area = "" }, new { @class = "dropdown-item" })
                        <div class="dropdown-divider"></div>
                        @Html.ActionLink("Register Client", "Register", "Clients", new { area = "" }, new { @class = "dropdown-item" })
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link">Products</a>
                    <div class="dropdown-menu dropdown-menu-right   " aria-labelledby="navbarDropdown">
                        @Html.ActionLink("List of Products", "Index", "Home", new { area = "" }, new { @class = "dropdown-item" })
                        <div class="dropdown-divider"></div>
                        @Html.ActionLink("Register Product", "Index", "Clients", new { area = "" }, new { @class = "dropdown-item" })
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link">Employees</a>
                    <div class="dropdown-menu dropdown-menu-right   " aria-labelledby="navbarDropdown">
                        @Html.ActionLink("List of Employees", "Index", "Home", new { area = "" }, new { @class = "dropdown-item" })
                        <div class="dropdown-divider"></div>
                        @Html.ActionLink("Register Employee", "Index", "Clients", new { area = "" }, new { @class = "dropdown-item" })
                    </div>
                </li>
            </ul>
            <div class="form-inline my-2 my-lg-0 profileLeft">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link">
                            <i class="fas fa-user"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            @Html.ActionLink("Profile", "Index", "Home", new { area = "" }, new { @class = "dropdown-item" })
                            <div class="dropdown-divider"></div>
                            @Html.ActionLink("Sing Out", "Index", "Clients", new { area = "" }, new { @class = "dropdown-item" })
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
