@{
    ViewBag.Title = "Home Page";
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRM</title>
    @*CSS*@
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Style.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-free-5.13.0-web/css/all.css" rel="stylesheet" />
    <link href="~/Content/select2.min.css" rel="stylesheet" />

    @*Scripts*@
    @Scripts.Render("~/Scripts/jquery-3.4.1.js")
    @Scripts.Render("~/Content/bootstrap/js/bootstrap.js")
    @Scripts.Render("~/Scripts/select2.js")
    @Scripts.Render("~/Scripts/main.js")
</head>
<body style="background-color:#0c4494">
    <div class="d-flex justify-content-center">
        <div class="container singIn">
            <div class="container-main shadow">
                <div style="text-align: center" class="mb-5">
                    <img src="~/Content/image/userIcon.png" style="height: 96px; width: 96px" class="mb-3" />
                    <h3 style="color:gray">Sing In</h3>
                </div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <i class="fas fa-user input-group-text"></i>
                    </div>
                    <input type="text" name="userName" id="userName" class="form-control inputSingIn" autocomplete="off" placeholder="User Name">
                </div>
                <div class="input-group mt-5">
                    <div class="input-group-prepend">
                        <i class="fas fa-key input-group-text"></i>
                    </div>
                    <input type="password" name="password" id="password" class="form-control inputSingIn" autocomplete="off" placeholder="Password">
                </div>
                <div class="d-flex justify-content-center mt-5">
                    <input type="submit" class="btn btn-primary btn-SingIn" value="Sing In" onclick="SingIn()" />
                </div>
            </div>
        </div>
    </div>
</body>
</html>

