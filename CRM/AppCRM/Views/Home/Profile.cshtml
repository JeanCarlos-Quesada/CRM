@model DO.Objects.employee
@{
    ViewBag.Title = "Profile";
    List<byte> rols = ViewBag.rols;
}

<div class="container-main shadow">
    <div class="ml-4 mr-4">
        <h3 class="titleView">Profile</h3>
        <div>
            <div class="form-group">
                <label for="clientName">Full Name</label>
                @Html.TextBoxFor(m => m.employeeName, new { @class = "form-control", @readonly = "true" })
            </div>
            <div class="form-group">
                <label for="phone">Phone</label>
                @Html.TextBoxFor(m => m.phone, new { @class = "form-control", @readonly = "true" })
            </div>
            <div class="form-group">
                <label for="email">Email Andress</label>
                @Html.TextBoxFor(m => m.email, new { @class = "form-control", @readonly = "true" })
            </div>
            <div class="form-group">
                <label for="registerDate">Register Date</label>
                <input type="text" name="registerDate" class="form-control" readonly value="@Model.registerDate.ToString("MM/dd/yyyy")" />
            </div>
            <div class="form-group">
                <label for="clientName">Gender</label>
                @switch (Model.gender)
                {
                    case "U":
                        <input type="text" name="gender" class="form-control" readonly value="Undefine" />
                        break;
                    case "M":
                        <input type="text" name="gender" class="form-control" readonly value="Masculine" />
                        break;
                    case "F":
                        <input type="text" name="gender" class="form-control" readonly value="Female" />
                        break;
                }
            </div>
            <div class="form-group">
                <label for="clientName">Rols</label>
                <br />
                @if (rols.Contains(1))
                {
                    <input type="checkbox" disabled="disabled" checked="true">
                }
                else
                {
                    <input type="checkbox" disabled="disabled">
                }
                <label for="clientName">Administrador</label>
                <br />
                @if (rols.Contains(2))
                {
                    <input type="checkbox" disabled="disabled" checked="true">
                }
                else
                {
                    <input type="checkbox" disabled="disabled">
                }
                <label for="clientName">Seller</label>
            </div>
            <div class="d-flex justify-content-end" style="display:inline-block">
                <a class="btn btn-primary mr-3" style="color:white" onclick="showChangeUserName()">Change User Name</a>
                <a class="btn btn-primary" style="color:white" onclick="showChangePassword()">Change Password</a>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Scripts/profile.js")
