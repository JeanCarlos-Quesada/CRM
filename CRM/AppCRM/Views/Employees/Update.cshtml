@model DO.Objects.employee
@{
    ViewBag.Title = "Update";
    List<DO.Objects.user_x_rols> rols = ViewBag.rols;
}

<div class="container-main shadow">
    <div class="ml-4 mr-4">
        <h3 class="titleView">Update Client</h3>
        @using (Html.BeginForm(new { id = Model.employeeId }))
        {
            <div>
                <div class="form-group">
                    <label for="clientName">Full Name</label>
                    @Html.TextBoxFor(m => m.employeeName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    @Html.TextBoxFor(m => m.phone, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="email">Email Andress</label>
                    @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="registerDate">Register Date</label>
                    <input type="text" name="registerDate" class="form-control" readonly value="@Model.registerDate.ToString("MM/dd/yyyy")" />
                </div>
                <div class="form-group">
                    <label for="clientName">Gender</label>
                    <select name="gender" class="custom-select">
                        @switch (Model.gender)
                        {
                            case "U":
                                <option value="U" selected>Undefined</option>
                                <option value="M">Masculine</option>
                                <option value="F">Female</option>
                                break;
                            case "M":
                                <option value="U">Undefined</option>
                                <option value="M" selected>Masculine</option>
                                <option value="F">Female</option>
                                break;
                            case "F":
                                <option value="U">Undefined</option>
                                <option value="M">Masculine</option>
                                <option value="F" selected>Female</option>
                                break;
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="clientName">Rols</label>
                    <br />
                    @if (rols.Where(x => x.rolId == 1).Count() != 0)
                    {
                        @Html.CheckBox("isAdmin",true)
                    }
                    else
                    {
                        @Html.CheckBox("isAdmin")
                    }
                    <label for="clientName">Administrador</label>
                    <br />
                    @if (rols.Where(x => x.rolId == 2).Count() != 0)
                    {
                        @Html.CheckBox("isSeller", true)
                    }
                    else
                    {
                        @Html.CheckBox("isSeller")
                    }
                    <label for="clientName">Seller</label>
                </div>
                <input type="submit" value="Update" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "Index", "Employees", new { @class = "btn btn-primary aButton" })
            </div>
        }
    </div>
</div>


<script>
    $(document).ready(function () {
        $('.custom-select').select2();
    });
</script>

